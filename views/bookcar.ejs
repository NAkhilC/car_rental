<html>
    <head>
      <script type="text/javascript" src="project.js"> </script>
        <link rel="stylesheet" type="text/css" href="homecss.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    </head>
  <body>
  <div>
    <div class="homenav">
      <ul>
        <li><a  href="home">Home</a></li>
        <li><a href="profile">Profile</a></li>
        <li><a href="logout" ><%= inout %></a></li>
        <li><a href="history" >Booking History</a></li>
      </ul>
    </div><br><br><br>
  <div>
    <div class="infodiv"><h1><%= info %></h1></div>
    <br>
    <% var nof=info.slice(-1); %>
    <div class="mindiv"> 
       <div class="mindiv1"> 
        <% if(cars.length>0 && nof>0 )
        {
          for(i=0;i<(cars.length);i++)
          { %>
              <div class="allcars">
                <div class="allcars1"  >
                   <div  class="allcars11">
                   <% imgurl="images/"+cars[i].Carid+".jpg" %>
                    <div class="acimg" >
                      <img style="width: 100%;height: 100%;" src=<%=imgurl%> />
                    </div>
                    <div class="acdet">
                      <p><h2><%= cars[i].class %></h2>
                       <h4><%= cars[i].Similar %></h4><span><%= cars[i].seats %> Seats</span> <span style="margin-left: 20px;">2 bags</span><span style="margin-left: 20px;"> Automatic</span> </p>
                      <p>Driven : <%= cars[i].driven %></p>
                    </div>
                    <div class="acpay">
                      <div style="display: flex;">
                       <div style="margin-left: 80px;"><h4>CAD </h4></div> <div><h1><%= Math.round(cars[i].day_price*nof,2) %></h1></div>
                      </div>
                        <div style="margin-left: 110px;margin-top: -20px;">Total</div>
                        <% req="/bookinfo:"+cars[i].Carid %>
                        <form method="get" action=<%=req%> > <button class="acbtnp" id="pac" > Pay at the counter</button></form>
                    </div>
                 </div>
              </div>
          </div>
          <% }
        } %>
       </div> 
    </div>  
</div>
<div class="footer">
  <p style="margin-left: 10px;">&#169; copyright 2021, E-car rental Network</p>
  <p style= "margin-left:67%; "> Terms and Conditions, Privacy policy</p>
</div>
</body>
</html>
  
        
  